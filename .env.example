# Project Configuration
COMPOSE_PROJECT_NAME=prod_abc       # Docker Compose project name
APP_NAME=abc                        # Application name identifier
ENV=prod                            # Environment type (prod, staging, dev, etc.)

# Host Configuration
CONTAINER_PORT=8000                 # Internal container port for the application
HOST_URL=abc.com                    # Domain name for the application
HOST_PORT=80                        # External port to access the application

# Cron and Job Configuration
ENABLE_CRON=false                   # Toggle cron job functionality
ENABLE_JOB=false                    # Toggle background job processing

# PHP Configuration
PHP_VERSION=8.3                     # PHP version to use
PHP_MEMORY_LIMIT=512M               # Maximum memory allocation for PHP processes
PHP_UPLOAD_MAX_FILESIZE=30M         # Maximum file upload size
PHP_POST_MAX_SIZE=30M               # Maximum POST request size
PHP_MAX_EXECUTION_TIME=60           # Maximum script execution time in seconds

# MongoDB Extension Configuration
ENABLE_MONGODB_EXTENSION=false      # Toggle MongoDB extension installation
ENABLE_MONGODB_EXTENSION_VERSION=1.20.0
